<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/meta %>

    <title>Tours Admin</title>

    <% include ../partials/styles %>   

</head>

<body class="infobar-overlay">

    <% include ../partials/header %>

        <div id="wrapper">
            <div id="layout-static">
                <% include ../partials/left-menu %>
                    <div class="static-content-wrapper">
                        <div class="static-content">
                            <div class="page-content">
                                <ol class="breadcrumb">

                                    <li class="">
                                        <a href="/">Home</a>
                                    </li>
                                    <li class="active">
                                        <a href="/">Dashboard</a>
                                    </li>

                                </ol>
                                <div class="page-heading">
                                    <h1>Dashboard</h1>
                                    <div class="options">
                                        <div class="btn-toolbar">
                                            <a href="/" class="btn btn-default">
                                                <i class="fa fa-fw fa-refresh"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="container-fluid">
                                    <div data-widget-group="group1">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <div class="amazo-tile tile-info" href="#">
                                                    <div class="tile-heading">
                                                        <div class="title">Passeios realizados</div>
                                                        <div class="secondary">este mês</div>
                                                    </div>
                                                    <div class="tile-body">
                                                        <div class="content"><%= ticketsThisMonth %></div>
                                                    </div>
                                                    <div class="tile-footer">
                                                        <span class="info-text text-right"><%= ticketsPercentual %>% de <%= ticketsGoal %></span>
                                                        <div class="progress">
                                                            <div class="progress-bar" style="width: <%= ticketsPercentual %>%"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-3">
                                                <div class="amazo-tile tile-info">
                                                    <div class="tile-heading">
                                                        <div class="title">Novos clientes</div>
                                                        <div class="secondary">este mês</div>
                                                    </div>
                                                    <div class="tile-body">
                                                        <div class="content"><%= customersThisMonth %></div>
                                                    </div>
                                                    <div class="tile-footer">
                                                        <span class="info-text text-right"><%= customersPercentual %>% de <%= customersGoal %></span>
                                                        <div class="progress">
                                                            <div class="progress-bar" style="width: <%= customersPercentual %>%"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-3">
                                                <div class="amazo-tile tile-white">
                                                    <div class="tile-heading">
                                                        <span class="title">Clientes</span>
                                                    </div>
                                                    <div class="tile-body">
                                                        <span class="content"><%= customers %></span>
                                                    </div>
                                                    <div class="tile-footer">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-3">
                                                <div class="amazo-tile tile-white">
                                                    <div class="tile-heading">
                                                        <div class="title">Serviços</div>
                                                    </div>
                                                    <div class="tile-body">
                                                        <span class="content"><%= services %></span>
                                                    </div>
                                                    <div class="tile-footer text-center">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% include ../partials/footer %>
                    </div>

            </div>
        </div>

        <% include ../partials/right-menu %>

        <script>
            var name = "<%= (typeof user != 'undefined' && typeof user.name != 'undefined') ? user.name : '' %>";
            var initials = "<%= (typeof user != 'undefined' && typeof user.initials != 'undefined') ? user.initials : '' %>";

            if(name){
                sessionStorage.setItem('user.name', name);
            }
            if(initials){
                sessionStorage.setItem('user.initials', initials);
            }
            sessionStorage.setItem('nextTickets', "<%= (typeof nextTickets != 'undefined') ? nextTickets : '' %>");
        </script>

        <% include ../partials/scripts %>


</body>

</html>