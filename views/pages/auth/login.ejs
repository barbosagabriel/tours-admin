<!DOCTYPE html>
<html lang="en" class="coming-soon">

<head>
    <% include ../../partials/meta %>
    <title>Tours Admin</title>
    <% include ../../partials/styles %>
</head>

<body class="focused-form">
    <div class="container" id="login-form">
        <a href="/" class="login-logo">
            <h2>Tours Admin</h2>
            
        </a>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <form action="/login" method="POST" id="form-login" class="form-horizontal">
                            
                            <% if(typeof error != 'undefined' && error){ %>
                            <div class="alert alert-dismissable alert-danger">
                                <strong><%= error.title %></strong> <%= error.message %>
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            </div>
                            <% } %>

                            <% if(typeof alert != 'undefined' && alert){ %>
                                <div class="alert alert-dismissable alert-warning">
                                    <strong><%= alert.title %></strong> <%= alert.message %>
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                </div>
                                <% } %>
                            
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <input type="text" id="email" name="email" class="form-control" placeholder="E-mail" data-parsley-type="email" data-parsley-required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <input type="password" id="password" name="password" class="form-control" placeholder="Senha" data-parsley-required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <a href="/forgot-password" class="pull-left">Esqueceu a senha?</a>
                                    <div class="checkbox-inline icheck pull-right pt0">
                                        <label for="">
                                            <input type="checkbox" name="rememberme"></input>
                                            Lembrar-me
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-footer">
                                <div class="clearfix">
                                    <button type="submit" id="btnLogin" class="btn btn-primary pull-right">Entrar</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="text-center hide">
                    <a href="#" class="btn btn-label btn-social btn-googleplus mb20">
                        <i class="fa fa-fw fa-google"></i>Entrar com Google
                    </a>
                    <a href="#" class="btn btn-label btn-social btn-facebook mb20">
                        <i class="fa fa-fw fa-facebook"></i>Entrar com Facebook
                    </a>
                </div>
            </div>
        </div>
    </div>

    <% include ../../partials/scripts %>
    <script src="/assets/plugins/form-parsley/parsley.js"></script>
    <script src="/assets/plugins/form-parsley/i18n/pt-br.js"></script>
    <script src="/assets/plugins/form-parsley/parsley-config.js"></script>
    <script src="/assets/js/pages/auth/login.js"></script>

</body>

</html>